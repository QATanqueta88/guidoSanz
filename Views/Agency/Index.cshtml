@model IEnumerable<guido_sanz_parcial1.Models.Agency>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de agencias de motos</h1>
    <div class="container">
        <table class="table table-hover table-responsive max-width-75">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody >
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        <div>
                            <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="btn btn-primary btn-sm mr-2" asp-action="Details" asp-route-id="@item.Id">Inventario</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>   
<div class="text-left mt-4">
        <a class="btn btn-success" asp-action="Create">Crear nueva agencia</a>
</div>
